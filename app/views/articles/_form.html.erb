<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="field row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="field row mt-4">
          <%= f.label :description, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Description article" %>
          </div>
        </div>
        <div class="actions row justify-content-center mt-4">
          <%= f.submit class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
      <div class="mb-3">            
        <%= link_to '[Back]', articles_path, class: "text-info" %>
      </div>       
    </div> 
  </div>  
</div>


