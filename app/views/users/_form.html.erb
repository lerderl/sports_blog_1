<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="field row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>
        <div class="field row mt-4">
          <%= f.label :email, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_area :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="field row mt-4">
          <%= f.label :password, class: "col-2 col-form-label text-light" %><br/>
          <div class="col-10">
            <%= f.text_area :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>
        <div class="actions row justify-content-center mt-4">
          <%= f.submit "Sign up", class: "btn btn-outline-dark btn-lg" %>
        </div>
      <% end %>
      <div class="mb-3">            
        <%= link_to '[Back]', articles_path, class: "text-info" %>
      </div>       
    </div> 
  </div>  
</div>
